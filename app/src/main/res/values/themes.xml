<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HowlMusic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky</item>
        <!-- Status bar color. -->
        <item name="android:colorBackground">@color/pure_white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/colorBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HowlMusic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSplashscreenContent">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="Theme.HowlMusic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HowlMusic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>